extends layout

block content
  h1= title
  - let items = results
   div(class = "container-fluid")
    div(class = "row m-1")
     each item in items  
      - let destination = `dispatch(\"/pet/update?id=${item._id}\")`
      div(class="row-sm-2", class="m-1") pet_type: #{item.pet_type}(#{item.breed}) is #{item.cost}  
        button.btn( class="btn-primary ml-1", onclick= destination, style = "margin:8px;") Update
  script. 
    function dispatch(path){ 
        window.location.href=path 
    }     
       